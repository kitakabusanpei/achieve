<p id="notice_blog"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <p>コメントの変更</p>
    <%= form_for([blog, comment], remote: true) do |f| %>
      <%= f.hidden_field :blog_id %>
      <div class="field">
        <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
      </div>
      <div class="actions">
        <%= f.submit "登録する", class: 'btn btn-primary btn-block'  %>
      </div>
    <% end %>

  </div>
</div>
